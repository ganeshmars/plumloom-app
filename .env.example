###############################################################################
# PLUMLOOM APP ENVIRONMENT CONFIGURATION
###############################################################################

#------------------------------------------------------------------------------
# CORE APPLICATION SETTINGS
#------------------------------------------------------------------------------
# Required in both production and local development
APP_NAME=AI Chat Application
ENVIRONMENT=development     # Set to 'production' in prod environment
DEBUG=True                  # Set to False in production
SECRET_KEY=your-secret-key  # Use strong random key in production

#------------------------------------------------------------------------------
# DATABASE CONFIGURATION
#------------------------------------------------------------------------------
# Required in both environments
POSTGRES_USER=admin
POSTGRES_PASSWORD=your-secure-password  # Use strong password in production
POSTGRES_DB=ai_chat_db
POSTGRES_HOST=ai-chat-db    # In prod, use your cloud SQL host
POSTGRES_PORT=5432

#------------------------------------------------------------------------------
# API AND SECURITY SETTINGS
#------------------------------------------------------------------------------
# Required in both environments
API_V1_PREFIX=/api/v1
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings - Configure based on your frontend domain
CORS_ORIGINS=["http://localhost:3000"]  # In prod, use your frontend domain

#------------------------------------------------------------------------------
# AUTHENTICATION (DESCOPE)
#------------------------------------------------------------------------------
# Required in both environments
DESCOPE_PROJECT_ID=your-project-id-here
DESCOPE_MANAGEMENT_KEY=your-management-key-here
ALLOWED_SOCIAL_PROVIDERS=google,github,microsoft

#------------------------------------------------------------------------------
# PAYMENT PROCESSING (STRIPE)
#------------------------------------------------------------------------------
# Required in both environments
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

#------------------------------------------------------------------------------
# VECTOR DATABASE (WEAVIATE)
#------------------------------------------------------------------------------
# Required in both environments
WEAVIATE_URL=your-weaviate-cloud-url
WEAVIATE_API_KEY=your-weaviate-api-key
HUGGINGFACE_APIKEY=your-huggingface-api-key

#------------------------------------------------------------------------------
# GOOGLE CLOUD STORAGE
#------------------------------------------------------------------------------
# Required in both environments
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-bucket-name

# Local Development Only (not needed in production)
MOUNT_GCP_CREDENTIALS=~/.config/gcloud  # Path to local gcloud config
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Production Only
USE_GCP_WORKLOAD_IDENTITY=true  # Enable in production for secure auth

#------------------------------------------------------------------------------
# EMAIL CONFIGURATION (SENDGRID)
#------------------------------------------------------------------------------
# Required in both environments
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_SENDER=notifications-noreply@plumloom.ai

#------------------------------------------------------------------------------
# Tiptap Cloud Configuration
#------------------------------------------------------------------------------
# Required in both environments
TIPTAP_CLOUD_APP_ID=your-tiptap-cloud-app-id
TIPTAP_CLOUD_API_SECRET_KEY=your-tiptap-cloud-api-secret-key
JWT_AI_SECRET=your-ai-jwt-secret
JWT_COLLAB_SECRET=your-collab-jwt-secret

#------------------------------------------------------------------------------
# LOGGING
#------------------------------------------------------------------------------
# Required in both environments
LOG_LEVEL=INFO  # Use INFO or WARNING in production, DEBUG locally

#------------------------------------------------------------------------------
# LANGFUSE CONFIGURATION
#------------------------------------------------------------------------------
# Required in both environments
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_HOST=your-langfuse-host

#------------------------------------------------------------------------------
# LANGUAGE MODEL CONFIGURATION
#------------------------------------------------------------------------------
# Required in both environments
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
PRIMARY_LLM_PROVIDER=openai # or 'google'
SECONDARY_LLM_PROVIDER=google # or 'openai'
OPENAI_MODEL_NAME=gpt-4o # Or your preferred model
GEMINI_MODEL_NAME=gemini-1.5-flash # Or your preferred model

#------------------------------------------------------------------------------
# Llama Parse Configuration
#------------------------------------------------------------------------------
# Required in both environments
LLAMA_PARSE_KEY=your-llama-parse-key

#------------------------------------------------------------------------------
# Google Oauth Configuration
#------------------------------------------------------------------------------
# Required in both environments
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-secret-key
GOOGLE_REDIRECT_URI=redirect-url-database-change 